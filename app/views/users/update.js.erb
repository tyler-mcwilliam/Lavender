function refreshBalance(newBalance) {
  availableUserBalance = document.getElementById('user-available-balance');
  availableUserBalance.innerHTML = newBalance;
  depositModal = document.getElementById('userDeposit');
  depositModal.classList.remove('show');
  depositModal.setAttribute('style', 'display:none;');
  depositModal.setAttribute('aria-hidden', 'true;');
  document.querySelector('.modal-backdrop').classList.remove('modal-backdrop');
  document.querySelector('.modal-open').classList.remove('modal-open');
}

refreshBalance('$<%= j (current_user.available_balance_cents * 0.01).to_s %>');
