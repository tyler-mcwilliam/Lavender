<div class='container-fluid d-flex flex-column justify-content-center'>
  <div id='group-index-banner' class='container-fluid d-flex flex-column justify-content-center align-items-center'>
    <h2>Join a <span>group<span>.</h2>
    <h2>Start investing today!</h2>
  </div>

  <div id='group-cards-container' style='background-image:url(<%= asset_url ('bottomright.png') %>); background-position: right bottom; background-repeat: no-repeat;'>
    <div style='padding:50px;'>
      <row>
        <% Group.all.each do |group| %>
          <div class='group-cardd col-md-3'>
            <%= image_tag 'group.jpg' %>
            <div class='d-flex justify-content-between' style='width:300px;'>
              <h3 style='margin-left: 10px;'><%= group.name %></h3>
              <p style='margin-right: 10px;'><i class="fas fa-user"></i> <%= group.users.count %></p>
            </div>
          </div>
        <% end %>
      </row>
    </div>
  </div>
</span>
