function closeModal() {
  editGroupModal = document.getElementById('editGroup');
  editGroupModal.classList.remove('show');
  editGroupModal.setAttribute('style', 'display:none;');
  editGroupModal.setAttribute('aria-hidden', 'true;');
  document.querySelector('.modal-backdrop').classList.remove('modal-backdrop');
  document.querySelector('.modal-open').classList.remove('modal-open');
  refreshForm();
}


function refreshHeader(newName) {
  const str = newName.split('');
  const header = document.getElementById('chart-header');
  header.innerHTML = '';
  (function animate() {
  str.length > 0 ? header.innerHTML += str.shift() : clearTimeout(running);
  var running = setTimeout(animate, 90);
  })();
}

function refreshTab(newName2) {
  const str2 = newName2.split('');
  const tab = document.querySelector('.group-tabs-container h2')
  tab.innerHTML = '';
  (function animate() {
  str2.length > 0 ? tab.innerHTML += str2.shift() : clearTimeout(running);
  var running = setTimeout(animate, 90);
  })();
}

