<div class="modal fade modalForm" id="userDeposit" tabindex="-1" role="dialog" aria-labelledby="userDeposit" aria-hidden="true">
  <div class="modal-dialog modal-sm modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="userDepositLabel">Make a Deposit</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for [current_user], :url => update_user_path(@user.id), remote: true, :method => :patch do |f| %>
          <%= f.input :deposit, required: true, placeholder: 'Number in Dollars', style:'background-color:gray;', autocomplete: false%>
          <%= f.button :submit, 'Deposit Funds', class: "btn btn-primary btn-lg", style:"border-radius: 5rem; width:100%; font-size: 100%;" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
