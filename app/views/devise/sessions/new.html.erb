<div class="container", style="margin-top: 4.25rem;">
  <div class="row">
    <div class="col-md-4 mx-auto">

      <h2>Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions btn btn-primary btn-lg" style="border-radius: 5rem; width:100%; font-size: 100%; margin: 8px 0;">
          <%= f.button :submit, "Log in", class:"text-white" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
